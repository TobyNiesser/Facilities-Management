@page
@model FACILITIES.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.Name" class="control-label"></label>
                <input asp-for="Company.Name" class="form-control" />
                <span asp-validation-for="Company.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Addr1" class="control-label"></label>
                <input asp-for="Company.Addr1" class="form-control" />
                <span asp-validation-for="Company.Addr1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Addr2" class="control-label"></label>
                <input asp-for="Company.Addr2" class="form-control" />
                <span asp-validation-for="Company.Addr2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Town" class="control-label"></label>
                <input asp-for="Company.Town" class="form-control" />
                <span asp-validation-for="Company.Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.City" class="control-label"></label>
                <input asp-for="Company.City" class="form-control" />
                <span asp-validation-for="Company.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Postcode" class="control-label"></label>
                <input asp-for="Company.Postcode" class="form-control" />
                <span asp-validation-for="Company.Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.County" class="control-label"></label>
                <input asp-for="Company.County" class="form-control" />
                <span asp-validation-for="Company.County" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Telephone" class="control-label"></label>
                <input asp-for="Company.Telephone" class="form-control" />
                <span asp-validation-for="Company.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.VatNumber" class="control-label"></label>
                <input asp-for="Company.VatNumber" class="form-control" />
                <span asp-validation-for="Company.VatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Website" class="control-label"></label>
                <input asp-for="Company.Website" class="form-control" />
                <span asp-validation-for="Company.Website" class="text-danger"></span>
            </div>
            <div class="form-group form-check pt-2 pb-2 pr-2" style="background-color: lightgoldenrodyellow;">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Company.ApprovedSupplier" /> @Html.DisplayNameFor(model => model.Company.ApprovedSupplier)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Company.OfficeID" class="control-label"></label>
                <select asp-for="Company.OfficeID" class ="form-control" asp-items="ViewBag.OfficeID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

