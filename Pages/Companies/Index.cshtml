@page 
@model FACILITIES.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn-sm btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Addr1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Addr2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Town)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].VatNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Addr1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Addr2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Town)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VatNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier)
            </td>
            <td>
                <a class="btn-sm btn-primary" asp-page="./Edit" asp-route-id="@item.CompanyID">Edit</a>
                <a class="btn-sm btn-primary" asp-page="./Details" asp-route-id="@item.CompanyID">Details</a>
                <a class="btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.CompanyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
