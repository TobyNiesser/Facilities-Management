@page

@model FACILITIES.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
    <link href="/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="/css/style.bundle.css" rel="stylesheet" type="text/css" />
</head>
<br />
<div style="background-color: #f1f1f2;" class="pt-3 pb-3 pl-3 pr-3">
    <h2>Supplier</h2>
    <h4>Summary</h4>
    <br />
    <a asp-page="Create" style="color: #0275d8;" class="btn border border-primary"> Create New</a>
</div>
<br />
<table class="table" id="SuppliersIndex">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Addr1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Addr2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Town)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].County)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].VatNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].ApprovedSupplier)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Company[0].Office)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Company)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addr1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addr2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Town)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.County)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VatNumber)
                </td>
                <td>
                    <a href="@(item.Website)" target="_blank">@(item.Website)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApprovedSupplier)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Office.OfficeID)
                </td>*@
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CompanyID"><i class="btn far fa-edit" style="color: #36a3f7;"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.CompanyID"><i class="btn far fa-eye" style="color: #36a3f7;"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.CompanyID"><i class="btn far fa-trash-alt" style="color: #fd3995;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="/plugins/global/plugins.bundle.js" type="text/javascript"></script>
<script src="/js/scripts.bundle.js" type="text/javascript"></script>
<script src="/js/pages/components/keen-datatable/base/data-local.js" type="text/javascript"></script>
