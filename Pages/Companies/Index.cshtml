@page
@model FACILITIES.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}
<br />
<div style="background-color: #f1f1f2;" class="pt-3 pb-3 pl-3 pr-3">
    <h2>Companies</h2>
    <h4>Summary</h4>
    <br />
    <a asp-page="Create" style="color: #0275d8;" class="btn border border-primary"> Create New</a>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Addr1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Addr2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Town)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].County)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].VatNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Company)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addr1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addr2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Town)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.County)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VatNumber)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CompanyID"><i class="btn far fa-edit" style="color: #0275d8;"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.CompanyID"><i class="btn fas fa-info" style="color: #0275d8;"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.CompanyID"><i class="btn far fa-trash-alt" style="color: #d9534f;"></i></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>


