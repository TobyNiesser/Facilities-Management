                                            <div class="kt-widget-3__content-section">
                                                <img src="~/media/logos/Office Icon.png" />
                                            </div>
                                        </div>
                                        <div class="row align-items-center">
                                            <div class="form-group">
                                                <label asp-for="Setting.OfficeID" class="control-label">Office Name</label>
                                                <select asp-for="Setting.OfficeID" class="form-control" asp-items="ViewBag.OfficeID"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end::Portlet-->
                    <!--VIEW SYSTEMS PORTLET-->
                    <div class="col">
                        <div class="kt-portlet kt-portlet--fit kt-portlet--height-fluid">
                            <div class="kt-portlet__body kt-portlet__body--fluid">
                                <div class="kt-widget-3 kt-widget-3--success">
                                    <div class="kt-widget-3__content">
                                        <div class="kt-widget-3__content-info">
