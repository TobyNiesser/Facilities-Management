@page
@model FACILITIES.Pages.Files.CreateModel

@{
    ViewData["Title"] = "Create";
}
<br />
<div style="background-color: #f1f1f2;" class="pt-3 pb-3 pl-3 pr-3">
    <h2>Files</h2>
    <h4>Create New File</h4>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="File.FileName" class="control-label"></label>
                <input asp-for="File.FileName" class="form-control" />
                <span asp-validation-for="File.FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File.MimeType" class="control-label"></label>
                <input asp-for="File.MimeType" class="form-control" />
                <span asp-validation-for="File.MimeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File.Extension" class="control-label"></label>
                <input asp-for="File.Extension" class="form-control" />
                <span asp-validation-for="File.Extension" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File.FileSize" class="control-label"></label>
                <input asp-for="File.FileSize" class="form-control" />
                <span asp-validation-for="File.FileSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File.StoreLocation" class="control-label"></label>
                <input asp-for="File.StoreLocation" class="form-control" />
                <span asp-validation-for="File.StoreLocation" class="text-danger"></span>
            </div>

        </form>
        <br />
        <form action="BufferedSingleFileUploadPhysical/?handler=Upload"
              enctype="multipart/form-data" onsubmit="AJAXSubmit(this);return false;"
              method="post">
            <dl>
                <dt>
                    <label for="FileUpload_FormFile">File</label>
                </dt>
                <dd>
                    <input id="FileUpload_FormFile" type="file"
                           name="FileUpload.FormFile" />
                </dd>
            </dl>

            <input class="btn btn-sm btn-primary" type="submit" value="Upload" />

            <div style="margin-top:15px">
                <output name="result"></output>
            </div>
        </form>

        <script>
          async function AJAXSubmit (oFormElement) {
            var resultElement = oFormElement.elements.namedItem("result");
            const formData = new FormData(oFormElement);

            try {
            const response = await fetch(oFormElement.action, {
              method: 'POST',
              body: formData
            });

            if (response.ok) {
              window.location.href = '/';
            }

            resultElement.value = 'Result: ' + response.status + ' ' +
              response.statusText;
            } catch (error) {
              console.error('Error:', error);
            }
          }
        </script>



        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-sm btn-primary" />
        </div>
        <br />
    </div>
</div>


<div>
    <a class="btn-sm btn-primary" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


