@page "{id:int?}"
@model FACILITIES.Pages.Files.DetailsModel

@{
    ViewData["Title"] = "Details";
}

    <div class="kt-container kt-container--fluid pb-4" style="background-color: #fff;">
        <br />
        <div class="pt-3 pb-3 pl-3 pr-3">
            <h1><b>Files</b></h1>
            <h4>Details</h4>
        </div>
        <br />
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.File.FileName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.File.FileName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.File.MimeType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.File.MimeType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.File.Extension)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.File.Extension)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.File.FileSize)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.File.FileSize)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.File.StoreLocation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.File.StoreLocation)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-lg btn-success" asp-page="./Edit" asp-route-id="@Model.File.FileID">Edit</a>
            <a class="btn btn-lg btn-primary" asp-page="./Index">Back to List</a>
        </div>
    </div>



