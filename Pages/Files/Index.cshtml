@page
@model FACILITIES.Pages.Files.IndexModel

@{
    ViewData["Title"] = "Index";
}
<br />
<h1>Files</h1>

<p>
    <a asp-page="Create"><span class="glyphicon glyphicon-plus"></span> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.File[0].FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.File[0].MimeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.File[0].Extension)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.File[0].FileSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.File[0].StoreLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.File) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MimeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Extension)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoreLocation)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FileID"><i class="btn far fa-edit" style="color: #0275d8;"></i></a>
                <a asp-page="./Details" asp-route-id="@item.FileID"><i class="btn fas fa-info" style="color: #0275d8;"></i></a>
                <a asp-page="./Delete" asp-route-id="@item.FileID"><i class="btn far fa-trash-alt" style="color: #d9534f;"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
