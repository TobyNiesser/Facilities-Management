@page
@model FACILITIES.Pages.Files.IndexModel

@{
    ViewData["Title"] = "Files";
}
    <head>
        <link href="/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
        <link href="/css/style.bundle.css" rel="stylesheet" type="text/css" />
    </head>

    <div class="kt-container kt-container--fluid pb-4" style="background-color: #fff;">
        <br />
        <div class="pt-3 pb-3 pl-3 pr-3">
            <h1><b>Files</b></h1>
            <h4>Summary</h4>
            <br />
            <a asp-page="Create"  style="color: white;" class="btn btn-lg btn-success"> Upload File</a>
        </div>
        <br />
        <table class="table table-responsive" style="background-color: white;">
            <thead style="background-color: #ffb822;">
                <tr>
                    <th style="font-weight: 900; font-size:16px;">
                        @Html.DisplayNameFor(model => model.File[0].FileName)
                    </th>
                    <th style="font-weight: 900; font-size:16px;">
                        @Html.DisplayNameFor(model => model.File[0].MimeType)
                    </th>
                    <th style="font-weight: 900; font-size:16px;">
                        @Html.DisplayNameFor(model => model.File[0].Extension)
                    </th>
                    <th style="font-weight: 900; font-size:16px;">
                        @Html.DisplayNameFor(model => model.File[0].FileSize)
                    </th>
                    <th style="font-weight: 900; font-size:16px;">
                        @Html.DisplayNameFor(model => model.File[0].StoreLocation)
                    </th>
                    <th>
                        <h5><b>Mark As New</b></h5>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.File)
        {
                <tr>
                    <td class="font-weight-bold">
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MimeType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Extension)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreLocation)
                    </td>
                    <td>
                        <div class="col-3">
                            <span class="kt-switch">
                                <label>
                                    <input type="checkbox" name="">
                                    <span></span>
                                </label>
                            </span>
                        </div>
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.FileID"><i class="btn far fa-edit" style="color: #36a3f7;"></i></a>
                        <a asp-page="./Details" asp-route-id="@item.FileID"><i class="btn far fa-eye" style="color: #36a3f7;"></i></a>
                        <a asp-page="./Delete" asp-route-id="@item.FileID"><i class="btn far fa-trash-alt" style="color: #fd3995;"></i></a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>




<script src="/plugins/global/plugins.bundle.js" type="text/javascript"></script>
<script src="/js/scripts.bundle.js" type="text/javascript"></script>
<script src="/js/pages/components/keen-datatable/base/data-local.js" type="text/javascript"></script>