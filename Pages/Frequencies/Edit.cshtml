@page
@model FACILITIES.Pages.Frequencies.EditModel

@{
    ViewData["Title"] = "Edit";
}
<br />
<div style="background-color: #f1f1f2;" class="pt-3 pb-3 pl-3 pr-3">
    <h2>Frequency</h2>
    <h4>Edit Frequency</h4>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Frequency.FrequencyID" />
            <div class="form-group">
                <label asp-for="Frequency.FrequencyAmount" class="control-label"></label>
                <input asp-for="Frequency.FrequencyAmount" class="form-control" />
                <span asp-validation-for="Frequency.FrequencyAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-sm btn-primary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
