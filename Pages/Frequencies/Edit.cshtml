@page "{id:int?}"
@model FACILITIES.Pages.Frequencies.EditModel

@{
    ViewData["Title"] = "Edit";
}

    <div class="kt-container kt-container--fluid pb-4" style="background-color: #fff;">
        <br />
        <div class="pt-3 pb-3 pl-3 pr-3">
            <h1><b>Frequency</b></h1>
            <h4>Edit Frequency</h4>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Frequency.FrequencyID" />
                    <div class="form-group">
                        <label asp-for="Frequency.FrequencyAmount" class="control-label"></label>
                        <input asp-for="Frequency.FrequencyAmount" class="form-control" />
                        <span asp-validation-for="Frequency.FrequencyAmount" class="text-danger"></span>
                    </div>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-lg btn-success" data-toggle="modal" data-target="#exampleModal">
                        Edit
                    </button>
                    <a class="btn btn-lg btn-primary" asp-page="./Index">Back to List</a>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirm Changes?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-lg btn-secondary" data-dismiss="modal">Close</button>
                                    <input type="hidden" asp-for="Frequency.FrequencyID" />
                                    <input type="submit" value="Update" class="btn btn-sm btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
