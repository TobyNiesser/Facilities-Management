@page
@model FACILITIES.Pages.ItemConfigs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ItemConfig</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemConfig.Items_csv" class="control-label"></label>
                <input asp-for="ItemConfig.Items_csv" class="form-control" />
                <span asp-validation-for="ItemConfig.Items_csv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemConfig.OfficeID" class="control-label"></label>
                <select asp-for="ItemConfig.OfficeID" class="form-control" asp-items="ViewBag.OfficeID"></select>
            </div>

            <div class="form-group">
                <label for="ItemID" class="col-sm-2 control-label"></label>
                <h4>Tick Applicable Items</h4>
                <br />
                <div class="col-sm-10">
                    <input type="checkbox" name="ItemID" value="1"> Access Control<br />
                    <input type="checkbox" name="ItemID" value="2"> Boiler/Gas<br />
                    <input type="checkbox" name="ItemID" value="3"> CCTV<br />
                    <input type="checkbox" name="ItemID" value="4"> Emergency Lighting<br />
                    <input type="checkbox" name="ItemID" value="5"> Fire Alarm<br />
                    <input type="checkbox" name="ItemID" value="6"> Fixed Wire<br />
                    <input type="checkbox" name="ItemID" value="7"> Intruder Alarm<br />
                    <input type="checkbox" name="ItemID" value="8"> PAT Testing<br />
                </div>
            </div>

           

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
