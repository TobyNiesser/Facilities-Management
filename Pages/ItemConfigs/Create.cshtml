@page
@model FACILITIES.Pages.ItemConfigs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ItemConfig</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemConfig.Items_csv" class="control-label"></label>
                <input asp-for="ItemConfig.Items_csv" class="form-control" />
                <span asp-validation-for="ItemConfig.Items_csv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemConfig.OfficeID" class="control-label"></label>
                <select asp-for="ItemConfig.OfficeID" class="form-control" asp-items="ViewBag.OfficeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ItemConfig.ItemID" class="control-label"></label>
                <select asp-for="ItemConfig.ItemID" class="form-control" asp-items="ViewBag.ItemID"></select>
            </div>
            <br />

            <div class="form-group col-md-12 shadow-sm p-4 mb-4 bg-white" style="background-color: #f2f2f2;">
                <h4>Select Applicable Item(s)</h4>
                <br />

                @foreach (var o in ViewBag.ItemID)
                {
                    <label>
                        <input type="checkbox" name="MyItems" value="@o.Value" /><span>@o.Text</span>
                    </label>
                    <br />
                }

            </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

