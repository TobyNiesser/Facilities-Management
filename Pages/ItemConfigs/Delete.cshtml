                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemConfig.Item.ItemID)
                </dd>*@
            </dl>

            <!-- Modal Button -->
            <form method="post">
                <div>
                    <input type="hidden" asp-for="ItemConfig.ItemConfigID" />
                    <button type="button" value="Delete" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#exampleModal">
                        Delete
                    </button>
                    <a asp-page="./Index">Back to List</a>
                </div>
            </form>


            <!-- Modal -->
            <form method="post">
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to Delete?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                This action cannot be undone.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Back</button>
                                <input type="hidden" asp-for="ItemConfig.ItemConfigID" />
                                <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
