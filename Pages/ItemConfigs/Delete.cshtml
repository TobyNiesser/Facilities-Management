    <div class="kt-container kt-container--fluid pb-4" style="background-color: #fff;">
        <div class="pt-3 pb-3 pl-3 pr-3">
            <h1><b>Item Configuration</b></h1>
            <h4>Delete Configuration?</h4>
        </div>
        <br />
        <div>
            <dl class="row">
                @*<dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ItemConfig.Items_csv)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemConfig.Items_csv)
                </dd>*@
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ItemConfig.Office)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemConfig.Office.Name)
                </dd>
                @*<dt class="col-sm-2">
