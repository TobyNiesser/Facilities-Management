@page

@model FACILITIES.Pages.Items.CreateModel

@{
    ViewData["Title"] = "Create";
}

    <div class="kt-container kt-container--fluid pb-4" style="background-color: #fff;">
        <br />
        <div class="pt-3 pb-3 pl-3 pr-3">
            <h1><b>System</b></h1>
            <h4>Create New Item</h4>
        </div>
        <br />
        <div class="row">
            <div class="col-md-8">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Item.ItemName" class="control-label">System</label>
                        <input asp-for="Item.ItemName" class="form-control" />
                        <span asp-validation-for="Item.ItemName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-lg btn-success" />
                        <a class="btn btn-lg btn-primary" asp-page="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
