@page

@model FACILITIES.Pages.Items.IndexModel

@{
    ViewData["Title"] = "Items";
}

    <head>
        <link href="/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
        <link href="/css/style.bundle.css" rel="stylesheet" type="text/css" />
    </head>
<br />
<div style="background-color: #f1f1f2;" class="pt-3 pb-3 pl-3 pr-3">
    <h2>Items</h2>
    <h4>Summary</h4>
    <br />
    <a asp-page="Create" style="color: #0275d8;" class="btn border border-primary"> Create New</a>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].ItemName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ItemID"><i class="btn far fa-edit" style="color: #36a3f7;"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.ItemID"><i class="btn far fa-eye" style="color: #36a3f7;"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.ItemID"><i class="btn far fa-trash-alt" style="color: #fd3995;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script src="/plugins/global/plugins.bundle.js" type="text/javascript"></script>
<script src="/js/scripts.bundle.js" type="text/javascript"></script>
<script src="/js/pages/components/keen-datatable/base/data-local.js" type="text/javascript"></script>