@page "{id:int?}"
@model FACILITIES.Pages.Managers.EditModel

@{
    ViewData["Title"] = "Edit";
}
<br />
<div style="background-color: #f1f1f2;" class="pt-3 pb-3 pl-3 pr-3">
    <h2>Managers</h2>
    <h4>Edit Manager</h4>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Manager.ManagerID" />
            <div class="form-group">
                <label asp-for="Manager.UserName" class="control-label"></label>
                <input asp-for="Manager.UserName" class="form-control" />
                <span asp-validation-for="Manager.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manager.UserEmail" class="control-label"></label>
                <input asp-for="Manager.UserEmail" class="form-control" />
                <span asp-validation-for="Manager.UserEmail" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="Manager.CompanyID" class="control-label"></label>
            <select asp-for="Manager.CompanyID" class="form-control" asp-items="ViewBag.CompanyID"></select>
            <span asp-validation-for="Manager.CompanyID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Manager.PermissionID" class="control-label"></label>
            <select asp-for="Manager.PermissionID" class="form-control" asp-items="ViewBag.PermissionID"></select>
            <span asp-validation-for="Manager.PermissionID" class="text-danger"></span>
        </div>*@
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#exampleModal">
                Edit
            </button>
            <a class="btn btn-sm btn-primary" asp-page="./Index">Back to List</a>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Confirm Changes?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                            <input type="hidden" asp-for="Manager.ManagerID" />
                            <input type="submit" value="Update" class="btn btn-sm btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
