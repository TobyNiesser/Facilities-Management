@page
@model FACILITIES.Pages.Managers.IndexModel

@{
    ViewData["Title"] = "Managers";
}
<head>
    <link href="/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="/css/style.bundle.css" rel="stylesheet" type="text/css" />
</head>

<div class="kt-container kt-container--fluid pb-4" style="background-color: #fff;">
    <br />
    <div class="pt-3 pb-3 pl-3 pr-3">
        <h1><b>Manager</b></h1>
        <h4>Summary</h4>
        <br />
        <a asp-page="Create"  style="color: white;" class="btn btn-lg btn-success"> Create New</a>
    </div>
    <br />
    <table class="table" id="ManagersList" style="background-color: white;">
        <thead style="background-color: #ffb822;">
            <tr>
                <th style="font-weight: 900; font-size:16px;">
                    @Html.DisplayNameFor(model => model.Manager[0].UserName)
                </th>
                <th style="font-weight: 900; font-size:16px;">
                    @Html.DisplayNameFor(model => model.Manager[0].UserEmail)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Manager)
        {
            <tr>
                <td class="font-weight-bold">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ManagerID"><i class="btn far fa-edit" style="color: #36a3f7;"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.ManagerID"><i class="btn far fa-eye" style="color: #36a3f7;"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.ManagerID"><i class="btn far fa-trash-alt" style="color: #fd3995;"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>



<script src="/plugins/global/plugins.bundle.js" type="text/javascript"></script>
<script src="/js/scripts.bundle.js" type="text/javascript"></script>
<script src="/js/pages/components/keen-datatable/base/data-local.js" type="text/javascript"></script>