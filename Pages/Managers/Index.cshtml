@page
@model FACILITIES.Pages.Managers.IndexModel

@{
    ViewData["Title"] = "Managers";
}
<br />
<div style="background-color: #f1f1f2;" class="pt-3 pb-3 pl-3 pr-3">
    <h2>Managers</h2>
    <h4>Summary</h4>
    <br />
    <a asp-page="Create" style="color: #0275d8;" class="btn border border-primary"> Create New</a>
</div>
<br />
<table class="table" id="ManagersList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager[0].UserEmail)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Manager[0].Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manager[0].Permission)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Manager)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Company.CompanyID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Permission.PermissionID)
                    </td>*@
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ManagerID"><i class="btn far fa-edit" style="color: #0275d8;"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.ManagerID"><i class="btn fas fa-info" style="color: #0275d8;"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.ManagerID"><i class="btn far fa-trash-alt" style="color: #d9534f;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

