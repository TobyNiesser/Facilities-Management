@page
@model FACILITIES.Pages.Offices.IndexModel

@{
    ViewData["Title"] = "Index";
}
<br />
<div style="background-color: #f1f1f2;" class="pt-3 pb-3 pl-3 pr-3">
    <h2>Offices</h2>
    <h4>Summary</h4>
    <br />
    <a asp-page="Create" style="color: #0275d8;" class="btn border border-primary"> Upload File</a>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Addr1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Addr2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Town)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].LandlordName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].LandlordEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].LandlordTelephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Sqft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].LeaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Manager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Item)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Office)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addr1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addr2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Town)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LandlordName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LandlordEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LandlordTelephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sqft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Addr1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager.ManagerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item.ItemID)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.OfficeID"><i class="btn far fa-edit" style="color: #0275d8;"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.OfficeID"><i class="btn fas fa-info" style="color: #0275d8;"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.OfficeID"><i class="btn far fa-trash-alt" style="color: #d9534f;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
