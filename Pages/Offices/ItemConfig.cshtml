@page
@model FACILITIES.Pages.Offices.ItemConfig
@{
    ViewData["Title"] = "ItemConfig";
}

<h1>Item Configuration</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-group">
                <h4>Select Office</h4>
                @*<label asp-for="Office.OfficeID" class="control-label"></label>*@
                <select asp-for="Office.OfficeID" class="form-control" asp-items="ViewBag.OfficeID"></select>
            </div>
        </form>
    </div>
    <div class="col-md-6 shadow-sm p-4 mb-4 bg-white" style="background-color: #f2f2f2;">
        <div class="container">
            <h4>Select Applicable Item(s)</h4>
            <form method="post">
                @for (var i = 1; i <= 34; i++)
                {
                    <input name="AreChecked" type="checkbox" value="@i" /> @i<br />
                }

                <button>Click</button>

            </form>
        </div>
    </div>

</div>



<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary" />
</div>



<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}