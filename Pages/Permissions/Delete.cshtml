@page "{id:int?}"
@model FACILITIES.Pages.Permissions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

    <div class="kt-container kt-container--fluid pb-4" style="background-color: #fff;">
        <br />
        <div class="pt-3 pb-3 pl-3 pr-3">
            <h1><b>Permission</b></h1>
            <h4>Delete Permission?</h4>
        </div>
        <br />
        <div>
            <dl class="row">
                @*<dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Permission.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Permission.Name)
                </dd>*@
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Permission.AccountType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Permission.AccountType)
                </dd>
            </dl>

            <!-- Modal Button -->
            <form method="post">
                <div>
                    <input type="hidden" asp-for="Permission.PermissionID" />
                    <button type="button" value="Delete" class="btn btn-lg btn-danger" data-toggle="modal" data-target="#exampleModal">
                        Delete
                    </button>
                    <a class="btn btn-lg btn-primary" asp-page="./Index">Back to List</a>
                </div>
            </form>


            <!-- Modal -->
            <form method="post">
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to Delete?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                This action cannot be undone.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Back</button>
                                <input type="hidden" asp-for="Permission.PermissionID" />
                                <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
