@page
@model FACILITIES.Pages.Responsibilities.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Responsibilities</h1>

<p>
    <a asp-page="Create" style="color: #0275d8;" class="btn border border-primary"><span class="glyphicon glyphicon-plus" style="color: #0275d8;"></span> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Responsibility[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Responsibility) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ResponsibilityID"><span class="btn glyphicon glyphicon-cog" style="color: #0275d8;"></span></a>
                <a asp-page="./Details" asp-route-id="@item.ResponsibilityID"><span class="btn glyphicon glyphicon-th-list" style="color: #0275d8;"></span></a>
                <a asp-page="./Delete" asp-route-id="@item.ResponsibilityID"><span class="btn glyphicon glyphicon-remove" style="color: #d9534f;"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
